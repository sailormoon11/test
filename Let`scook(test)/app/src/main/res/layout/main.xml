<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/versionView"/>
    <Button
        android:id="@+id/btnSearch"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Поиск по ингредиентам"
        android:onClick="onSearch">
    </Button>

    <Button
        android:id="@+id/btnFilters"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Все рецепты"
        android:onClick="onFilters">
    </Button>
    <Button
        android:id="@+id/btnStock"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Мои запасы"
        android:onClick="onStock">
    </Button>
    <Button
        android:id="@+id/btnRandom"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Случайный рецепт"
        android:onClick="onRandom">
    </Button>

    <Button
        android:id="@+id/btnElect"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Избранные рецепты"
        android:onClick="onCelect">
    </Button>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/images"
        android:id="@+id/imageView2" />

</LinearLayout>
